<div class="bg-white shadow-md rounded-lg p-6">
  <%= form_with url: reports_path, method: :get, local: true do %>
    <div class="mb-4">
      <%= label_tag :category_id, "Categoria", class: "block text-gray-700 font-bold mb-2" %>
      <%= select_tag :category_id, options_from_collection_for_select(Category.all, :id, :category, params[:category_id]), include_blank: true, class: "block appearance-none w-full bg-white border border-gray-400 hover:border-gray-500 px-4 py-2 pr-8 rounded shadow leading-tight focus:outline-none focus:shadow-outline" %>
    </div>
    <div class="mb-4">
      <%= label_tag :address_id, "EndereÃ§o", class: "block text-gray-700 font-bold mb-2" %>
      <%= select_tag :address_id, options_from_collection_for_select(Address.all, :id, :street, params[:address_id]), include_blank: true, class: "block appearance-none w-full bg-white border border-gray-400 hover:border-gray-500 px-4 py-2 pr-8 rounded shadow leading-tight focus:outline-none focus:shadow-outline" %>
    </div>
    <div class="mb-4">
      <%= label_tag :search, "Pesquisar", class: "block text-gray-700 font-bold mb-2" %>
      <%= text_field_tag :search, params[:search], class: "block appearance-none w-full bg-white border border-gray-400 hover:border-gray-500 px-4 py-2 pr-8 rounded shadow leading-tight focus:outline-none focus:shadow-outline" %>
    </div>
    <%= submit_tag "Filtrar", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-full focus:outline-none focus:shadow-outline" %>
    <%= link_to "Novo", new_report_path, class: "bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded-full focus:outline-none focus:shadow-outline" %>
  <% end %>
</div>