<h1 class="text-2xl font-bold mb-4"><%= @report.title %></h1>

<div class="bg-white shadow-md rounded-lg p-6">
  <p class="text-gray-700 mb-2"><strong>Description:</strong> <%= @report.description %></p>
  <p class="text-gray-700 mb-2"><strong>Category:</strong> <%= @report.category.category %></p>
  <p class="text-gray-700 mb-2"><strong>Address:</strong> <%= @report.address.street %>, <%= @report.address.neighbhood %></p>

  <div class="mt-4">
  <%= link_to "Back to reports", reports_path, class: "bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded-full focus:outline-none focus:shadow-outline" %>
</div>
</div>