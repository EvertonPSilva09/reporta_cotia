<div class="container mx-auto">
  <h1 class="text-2xl font-bold mb-5 text-center">Editar Regras de Perfil de Usu√°rio</h1>
   <div class="bg-white shadow-md rounded-lg p-6 max-w-md mx-auto">
    <%= form_with(model: @user, url: admin_user_path(@user), local: true) do |form| %>
      <div class="mb-4">
  <%= form.label "Regra de Perfil", class: "block text-gray-700 text-sm font-bold mb-2" %>
  <%= form.collection_select :role_id, User::Role.all, :id, :name, {}, class: "block appearance-none w-full bg-white border border-gray-400 hover:border-gray-500 px-4 py-2 pr-8 rounded shadow leading-tight focus:outline-none focus:shadow-outline" %>
      </div>
        <div class="flex items-center justify-between">
         <%= form.submit "Salvar", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-full" %>
          <%= link_to "Back", admin_users_path, class: "bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded-full" %>
        </div>
      </div>
    <% end %>
</div>